<?xml version="1.0" encoding="UTF-8"?>
<campaign>
    <campaignUrn>urn:campaign:trialist</campaignUrn>
    <campaignName>Trialist Configuration</campaignName>
    <surveys>
        <survey>
            <id>setup</id>
            <title>Setup</title>
            <description>This is a one-time setup for the Trialist participant.</description>
            <submitText>Your participant is now reading to begin their trial.</submitText>
            <showSummary>false</showSummary>
            <anytime>true</anytime>
            <contentList>
                <!-- When combined, regimenA and regimenB form a comparison -->
                <prompt>
                    <id>regimenA</id>
                    <promptText>Choose from one of the following regimens.</promptText>
                    <displayLabel>Regimen A</displayLabel>
                    <promptType>multi_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>No specific treatment to be tested against Regimen B</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Tylenol (acetaminophen)</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Any NSAID (e.g. ibuprofen, naproxen, sulindac)</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Codeine combination product (e.g. Tylenol with codeine)</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Tramadol</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Hydrocodone combination product (e.g. Vicodin, Norco)</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>Oxycodone combination treatment (e.g. Percocet)</label>
                        </property>
                        <property>
                            <key>7</key>
                            <label>Complementary treatment: including but not limited to physical activity (exercise, stretching, yoga), mindfulness (meditation, relaxation, music therapy)</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>regimenB</id>
                    <promptText>Choose from one of the following regimens.</promptText>
                    <displayLabel>Regimen B</displayLabel>
                    <promptType>multi_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>No specific treatment to be tested against Regimen A</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Tylenol (acetaminophen)</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Any NSAID (e.g. ibuprofen, naproxen, sulindac)</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Codeine combination product (e.g. Tylenol with codeine)</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Tramadol</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Hydrocodone combination product (e.g. Vicodin, Norco)</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>Oxycodone combination treatment (e.g. Percocet)</label>
                        </property>
                        <property>
                            <key>7</key>
                            <label>Complementary treatment: including but not limited to physical activity (exercise, stretching, yoga), mindfulness (meditation, relaxation, music therapy)</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>startDate</id>
                    <promptText>When should the user begin the trial?</promptText>
                    <displayLabel>Start Date</displayLabel>
                    <promptType>timestamp</promptType>
                    <skippable>false</skippable>
                </prompt>
                <!-- If you change the duration or number of comparison cycles, 
                     you will have to manually change the JavaScript.
                -->
                <prompt>
                    <id>regimenDuration</id>
                    <promptText>What is the time period for each regimen?</promptText>
                    <displayLabel>Time Period</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>2 Days</label>
                            <value>2</value>
                        </property>
                        <property>
                            <key>1</key>
                            <label>1 Week</label>
                            <value>7</value>
                        </property>
                        <property>
                            <key>2</key>
                            <label>2 Weeks</label>
                            <value>14</value>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>numberComparisonCycles</id>
                    <promptText>How many comparison cycles?</promptText>
                    <displayLabel>Number of Comparison Cycles</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>2</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>3</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>4</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>random</id>
                    <promptText>random</promptText>
                    <displayLabel>Random</displayLabel>
                    <promptType>number</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>15</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>cognitiveFunction</id>
                    <promptText>What is the ID of the survey defining the cognitive function for the user?</promptText>
                    <displayLabel>cognitive Function</displayLabel>
                    <promptType>text</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>99999999</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>neuropathicPainTaken</id>
                    <promptText>Is the user subscribed to the neuropathic pain survey?</promptText>
                    <displayLabel>Neuropathic Pain Taken</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>No</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Yes</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>userSelected</id>
                    <promptText>What username was selected?</promptText>
                    <displayLabel>Username Selected</displayLabel>
                    <promptType>text</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>1</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>50</label>
                        </property>
                    </properties>
                </prompt>
            </contentList>
        </survey>
        <survey>
            <id>main</id>
            <title>Main</title>
            <description>A daily questionnaire about your well-being.</description>
            <submitText>Submit</submitText>
            <anytime>false</anytime>
            <contentList>
                <prompt>
                    <id>averagePainIntensity</id>
                    <promptText>What number best describes your pain on average during the past 24 hours? (from 0 = no pain to 10 = pain as bad as you can imagine)</promptText>
                    <displayLabel>Average Pain Intensity</displayLabel>
                    <promptType>number</promptType>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>enjoymentOfLife</id>
                    <promptText>What number best describes how much pain has interfered with your enjoyment of life during the past 24 hours? (from 0 = does not interfere to 10 = completely interferes)</promptText>
                    <displayLabel>Enjoyment of Life</displayLabel>
                    <promptType>number</promptType>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>generalActivity</id>
                    <promptText>What number best describes how much pain has interfered with your general activity during the past 24 hours? (from 0 = does not interfere to 10 = completely interferes)</promptText>
                    <displayLabel>General Activity</displayLabel>
                    <promptType>number</promptType>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <!-- 
                    PROMIS Fatigue Single Item
                -->
                <prompt>
                    <id>fatiguePrompt</id>
                    <promptText>I felt fatigued during the past 24 hours ...</promptText>
                    <displayLabel>Fatigued</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Not at all</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little bit</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Somewhat</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Quite a bit</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very much</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>drowsinessPrompt</id>
                    <promptText>How often did you feel drowsy or sleepy today?</promptText>
                    <displayLabel>Drowsiness</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>None of the time</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little of the time</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Some of the time</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>A good bit of the time</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Most of the time</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>All of the time</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>constipationPrompt</id>
                    <promptText>How often over the past 24 hours did you feel constipated?</promptText>
                    <displayLabel>Constipated</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Not at all</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little bit</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Somewhat</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Quite a bit</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very much</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>cognitiveFunctionSlowThinkingPrompt</id>
                    <promptText>My thinking has been slow ... </promptText>
                    <displayLabel>Slow Thinking</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Not at all</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little bit</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Somewhat</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Quite a bit</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very much</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>cognitiveFunctionFoggyThinkingPrompt</id>
                    <promptText>My thinking has been foggy ...</promptText>
                    <displayLabel>Foggy Thinking</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Not at all</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little bit</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Somewhat</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Quite a bit</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very much</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>cognitiveFunctionTroubleConcentratingPrompt</id>
                    <promptText>I have had trouble concentrating ... </promptText>
                    <displayLabel>Trouble Concentrating</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Not at all</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little bit</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Somewhat</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Quite a bit</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very much</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>cognitiveFunctionWorkingHarderPrompt</id>
                    <promptText>I have had to work harder than usual to keep track of what I was doing ...</promptText>
                    <displayLabel>Working Harder</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Not at all</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>A little bit</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Somewhat</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Quite a bit</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very much</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <!-- Patient Optional Measures (Benefit or Harm) -->
                <prompt>
                    <id>experiencePain</id>
                    <displayLabel>Experience Pain</displayLabel>
                    <promptText>Do you have pain accompanied by burning, pins and needles, itching, or a sensitive or unpleasant sensation on the skin?</promptText>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>No</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Yes</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>painSharpness</id>
                    <displayLabel>Pain Sharpness</displayLabel>
                    <promptText>How sharp does your pain feel? (from 0 = not sharp to 10 = like a knife)</promptText>
                    <promptType>number</promptType>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                    <condition>(experiencePain == 1)</condition>
                </prompt>
                <prompt>
                    <id>painHotness</id>
                    <displayLabel>Pain Hotness</displayLabel>
                    <promptText>How hot does your pain feel? (from 0 = not hot to 10 = on fire)</promptText>
                    <promptType>number</promptType>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                    <condition>(experiencePain == 1)</condition>
                </prompt>
                <prompt>
                    <id>painSensitivity</id>
                    <displayLabel>Pain Sensitivity</displayLabel>
                    <promptText>How sensitive is your skin to light touch or clothing? (from 0 = not sensitive to 10 = raw skin)</promptText>
                    <promptType>number</promptType>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                    <condition>(experiencePain == 1)</condition>
                </prompt>
            </contentList>
        </survey>
          <survey>
            <id>sleep</id>
            <title>Sleep</title>
            <description>A daily survey about your sleep quality.</description>
            <submitText>Submit</submitText>
            <anytime>false</anytime>
            <contentList>
                <!-- 
                    PROMIS Sleep Disturbance Single Item
                -->
                <prompt>
                    <id>sleepDisturbancePrompt</id>
                    <promptText>My sleep quality last night was ...</promptText>
                    <displayLabel>Sleep Quality</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Very poor</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Poor</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Fair</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Good</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very good</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
            </contentList>
         </survey>
    </surveys>
</campaign>
