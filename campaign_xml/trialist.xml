                    This is because the values are used to score the assessment. (To be confirmed with Ida and Rich.)
                -->
                <prompt>
                    <id>worstPainIntensity</id>
                    <promptText>Over the past 24 hours, how intense was your pain at its worst?</promptText>
                    <displayLabel>Worst Pain Intensity</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Had No Pain</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Mild</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Moderate</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Severe</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very Severe</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>averagePainIntensity</id>
                    <promptText>Over the past 24 hours, how intense was your average pain?</promptText>
                    <displayLabel>Average Pain Intensity</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Had No Pain</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Mild</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Moderate</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Severe</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very Severe</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>painRightNow</id>
                    <promptText>What is your level of pain right now?</promptText>
                    <displayLabel>Pain Right Now</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>Had no pain</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Mild</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Moderate</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>Severe</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>Very severe</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
            </contentList>
