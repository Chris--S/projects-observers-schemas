<?xml version="1.0" encoding="UTF-8"?>
<campaign>
    <campaignUrn>urn:ohmage:campaign:trialist</campaignUrn>
    <campaignName>Trialist Configuration</campaignName>
    <surveys>
        <survey>
            <id>setup</id>
            <title>Setup</title>
            <description>This is a one-time setup for the Trialist participant.</description>
            <submitText>Your participant is now reading to begin their trial.</submitText>
            <showSummary>false</showSummary>
            <anytime>true</anytime>
            <contentList>
                <!-- When combined, regimenA and regimenB form a comparison -->
                <prompt>
                    <id>regimenA</id>
                    <promptText>Choose from one of the following regimens.</promptText>
                    <displayLabel>Regimen A</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>Tylenol (acetaminophen) 650mg 4 times daily</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Vicodin, hydrocodone/acetaminophen 5/325 (0-2 tabs QID, up to 8 tabs daily)</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Vicodin (hydrocodone/acetaminophen) 5/325 (up to 8 tabs daily)</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>Low dose Vicodin hydrocodone/acetaminophen 5/325 (up to 8 tabs daily)</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>regimenB</id>
                    <promptText>Choose from one of the following regimens.</promptText>
                    <displayLabel>Regimen B</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>Motrin (ibuprofen) 600 mg 3 times daily</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>Tylenol, acetaminophen (up to the FDA recommended limit of 2600 mg daily)</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>Percocet (oxycodone/acetaminophen) 5/325 (up to 8 tabs daily)</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>high dose Vicodin hydrocodone/acetaminophen 10/325 (up to 8 tabs daily)</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>regimenDuration</id>
                    <promptText>What is the time period for each regimen?</promptText>
                    <displayLabel>Time Period</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>1 Week</label>
                            <value>1</value>
                        </property>
                        <property>
                            <key>1</key>
                            <label>2 Weeks</label>
                            <value>2</value>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>numberComparisonCycles</id>
                    <promptText>How many comparison cycles?</promptText>
                    <displayLabel>Number of Comparison Cycles</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>2</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>3</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>4</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>random</id>
                    <promptText>random</promptText>
                    <displayLabel>Random</displayLabel>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>AB-AB</label>
                            <value>1</value>
                        </property>
                        <property>
                            <key>1</key>
                            <label>AB-BA</label>
                            <value>2</value>
                        </property>
                        <property>
                            <key>2</key>
                            <label>BA-AB</label>
                            <value>3</value>
                        </property>
                        <property>
                            <key>3</key>
                            <label>BA-BA</label>
                            <value>4</value>
                        </property>
                    </properties>
                </prompt>
            </contentList>
        </survey>
        
        <!-- All of the possible outcomes surveys -->
        
