<?xml version="1.0" encoding="UTF-8"?>
<campaign>
	<campaignUrn>urn:campaign:ca:ucla:cens:fitbit_tracker</campaignUrn>
	<campaignName>FitBit Tracker</campaignName>
	<serverUrl>https://dev.mobilizingcs.org/</serverUrl>

	<surveys>
		<survey>
			<id>StepsTakenTodaySurvey</id>
			<title>Steps Taken Today</title>
			<description>Tracks the number of steps the given user has taken in a day.</description>
			<submitText>Track my Steps</submitText>
			<showSummary>false</showSummary>
			<editSummary>false</editSummary>
			<summaryText>Steps Taken Today</summaryText>
			<anytime>true</anytime>

			<contentList>
				<prompt>
					<id>StepsTakenPrompt</id>
					<displayType>event</displayType>
					<displayLabel>Steps Taken</displayLabel>
					<promptText>Enter the number of steps you have taken today.</promptText>
					<abbreviatedText>Enter your step count.</abbreviatedText>
					<promptType>number</promptType>
					
					<properties>
						<property>
							<key>min</key>
							<label>0</label>
						</property>
						<property>
							<key>max</key>
							<label>99999999</label>
						</property>
					</properties>
					
					<default>0</default>  
					<skippable>false</skippable>
				</prompt>
			</contentList>
		</survey>
	</surveys>
</campaign>