  <surveys>
    <survey>
      <id>Morning</id>
      <title>Morning</title>
      <description>This is the morning survey.</description>
      <submitText>Please use the food button on your phone to to take pictures of your food.</submitText>
      <showSummary>false</showSummary>
      <anytime>true</anytime>
    
      <contentList>
        <prompt>
          <id>feltStress1</id>
          <displayType>measurement</displayType>
          <unit>how stressed</unit>
          <displayLabel>Felt Stress</displayLabel>
          <promptText>Have you felt stressed in the last two hours? </promptText>
          <promptType>single_choice</promptType>
          <skippable>true</skippable>
          <skipLabel>skip</skipLabel>
          <properties>
            <property>
              <key>0</key>
              <label>Not at all</label>
              <value>1</value>
            </property>
            <property>
              <key>1</key>
              <label>Slightly</label>
              <value>2</value>
            </property>
            <property>
              <key>2</key>
              <label>Moderately</label>
              <value>3</value>
            </property>
            <property>
              <key>3</key>
              <label>Very</label>
              <value>4</value>
            </property>
           </properties>
        </prompt>

        <prompt>
          <id>foodQuality1</id>
          <displayType>category</displayType>
          <displayLabel>NutritionalQuality</displayLabel>
          <promptText>Rate the nutritional quality of this meal?</promptText>
          <promptType>single_choice</promptType>
          <skippable>true</skippable>
          <skipLabel>skip</skipLabel>
          <properties>
            <property>
              <key>0</key>
              <label>Low</label>
              <value>0</value>
            </property>
            <property>
              <key>1</key>
              <label>Medium</label>
              <value>1</value>
            </property>
            <property>
              <key>2</key>
              <label>High</label>
              <value>2</value>
            </property>
          </properties>
        </prompt>

        <prompt>
          <id>foodHowMuch1</id>
          <displayType>category</displayType>
          <displayLabel>HowMuch</displayLabel>
          <promptText>How much did you eat?</promptText>
          <promptType>single_choice</promptType>
          <skippable>true</skippable>
          <skipLabel>skip</skipLabel>
          <properties>
            <property>
              <key>0</key>
              <label>Too little / not enough</label>
              <value>0</value>
            </property>
            <property>
              <key>1</key>
              <label>Just right</label>
              <value>1</value>
            </property>
            <property>
              <key>2</key>
              <label>Too much</label>
              <value>2</value>
            </property>
          </properties>
        </prompt>

      </contentList>
    </survey>

